.scroll-bar-indicator
	background none

.bar.bar-positive
	background: -moz-linear-gradient(top, #7bc0e6 0%, #377fa8 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#7bc0e6), color-stop(100%,#377fa8)); 
	md-button
		.md-button-inner
			padding 0
	i.icon.ion-navicon
		font-size: 35px;
		padding-left: 10px;
		border-right: 1px solid #2c6f94;
		padding-right: 15px;
	h1 
		img
			position: absolute;
			width: 115px;
			left: 0;
			right: 0;
			margin: auto;
			top: 3px;

.tabs-primary
	> div.tabs
		background #222222
		height 55px
		a.tab-item
			border-top 5px solid #575757
			border-right 1px solid #1b1b1b
			border-left 1px solid #1b1b1b
			color #fff
			&.tab-item-active
				background #383838
				border-top 5px solid #3780a8
			&:hover
				cursor pointer
	
/* --login-- */
soccer-background()
	background url(../img/login_back.jpg) no-repeat
	background-size cover 

.login
	soccer-background()
	img
		width 62%
	ion-content 
		.scroll
			h1
				margin 50px auto 20px
				width 90%
				img
					width 100%
			.card, .list-inset 
				border-radius: 10px
				label.item.item-input
					i.icon
						font-size 20px
						padding-right 25px
			> div
				width 90%
				margin auto
				.button.button-positive
					border-color: #46518a;
					background-color: #5562a3;
					font-size 10px
					transform: skew(-10deg);
					-ms-transform: skew(-10deg);
					-webkit-transform: skew(-10deg);
					-moz-transform: skew(-10deg);
					min-height: 32px !important
					height 20px
					span
						-webkit-transform: skew(10deg);
						display block
						margin-top -5px
						line-height 20px
						height 100%
					i.icon
						padding 10px
						&::before
							line-height 20px
				.button.button-positive.italic
					font-style italic
					background-color #187ab1
					border-color #156b9c
					font-size 16px
					font-weight bold
				ul 
					color #7d7d7d
					font-size 9px
					display inline-flex
					margin-bottom 30px
					li.dudas 
						margin-right 13px
			div.border 
				border-top 1px solid #353535
				padding-top 10px

