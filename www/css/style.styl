/* --login-- */
soccer-background()
	background url(../img/login_back.jpg) no-repeat
	background-size cover 
.login
	soccer-background()
	img
		width 62%
	ion-content
		h1
			margin 50px 20px
			width 400px
			margin-bottom: 20px;
		.card, .list-inset 
			border-radius: 10px
			label.item.item-input
				i.icon
