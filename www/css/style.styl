				-webkit-transform: skew(-10deg);
				-moz-transform: skew(-10deg);
				min-height: 32px !important
				height 20px
				span
					-webkit-transform: skew(10deg);
					display block
					margin-top -5px
				i.icon
					padding 10px
			.button.button-positive.italic
				font-style italic
				background-color: #187ab1
				border-color: #156b9c
				font-size 16px
				font-weight bold
			ul 
				color: #7d7d7d;
				font-size: 11px;
				display: inline-flex;
				margin-bottom 30px
				li.dudas 
					margin-right 13px
		div.border 
			border-top 1px solid #353535
			padding-top 10px
