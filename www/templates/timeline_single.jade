div.content-timeline_single
	ion-view.timeline_single
		div.bar.bar-header.bar-positive
			i.icon.ion-navicon
			h1 
				img(src="./img/ki-logo.png")
			i.icon.ion-edit
		ion-content.has-header
			div.contenido
				div.list.card
					div.item.item-avatar.post
						img(src="./img/img2.png")
						h2 {{post.user.name}}
						p.dato {{post.time}} 
							span {{post.location}}
						i.icon.ion-ios7-paper-outline
					div.item.item-body
						p {{post.text}}
					div.none
						div.block
							div.item.item-avatar
								img(src="./img/img2.png")
								h2 Alejandro De Haro
								p.dato Hace una hora 
									span Ciudad de México
							div.item.item-image
								img(src="./img/chicharito.png")
								p.tittle Los once que inician contra Belorrusia con MiSelecciónMX...
					div.item.tabs.tabs-secondary.tabs-icon-left
						a.tab-item.uno(href="#")
							i.icon
								img(src="./img/facebook.png")
						a.tab-item.dos(href="#")
							i.icon
								img(src="./img/twitter.png")
						a.tab-item.tres(href="#")
							i.icon
								img(src="./img/call.png")
						a.tab-item.cuatro(href="#")
							i.icon.ion-more.position
			
			div.list(ng-repeat='comment in comments')
				a.item.item-avatar
					img(src="./img/img2.png")
					h2 {{comment.user.name}}
					p.comment {{comment.text}}
					p.fecha {{comment.time}}